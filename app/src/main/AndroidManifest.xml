<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zidanemagaba.sipi">

    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="E-SIPI"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.zidanemagaba.sipi.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zidanemagaba.sipi.MainActivity"
            android:label="Checker e-Ranjen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.zidanemagaba.sipi.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.zidanemagaba.sipi.NFCActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.zidanemagaba.sipi.DataBerlabuhActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.zidanemagaba.sipi.BerlayarActivity"
            android:label="Data e-Ranjen"
            android:parentActivityName="com.zidanemagaba.sipi.MainActivity" />
        <activity
            android:name="com.zidanemagaba.sipi.AktivitasActivity"
            android:label="Aktivitas"
            android:parentActivityName="com.zidanemagaba.sipi.MainActivity" />
        <activity
            android:name="com.zidanemagaba.sipi.BerlabuhActivity"
            android:label="Data Ranjen"
            android:parentActivityName="com.zidanemagaba.sipi.MainActivity" />
        <activity
            android:name="com.zidanemagaba.sipi.HistoryActivity"
            android:label="History"
            android:parentActivityName="com.zidanemagaba.sipi.MainActivity" />
        <activity android:name="com.zidanemagaba.sipi.BlokirActivity"></activity>
    </application>

</manifest>